<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatorio_item_registro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.RelatorioActivity">

    <TextView
        android:id="@+id/servico_saude_item_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clínica Clinicoor" />

    <TextView
        android:id="@+id/servico_saude_item_logradouro_numero_bairro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servico_saude_item_nome"
        tools:text="Rua Abacaxi Amarelo, nº 123. Vila das Frutas" />

    <TextView
        android:id="@+id/servico_saude_item_cep_cidade_estado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servico_saude_item_logradouro_numero_bairro"
        tools:text="CEP 83773123. Caracas City - SP" />

    <TextView
        android:id="@+id/servico_saude_item_ver_no_mapa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/servico_saude_item_ver_no_mapa"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/servico_saude_item_cep_cidade_estado" />

    <TextView
        android:id="@+id/servico_saude_item_enviar_mensagem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="@string/servico_saude_item_enviar_mensagem"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@id/servico_saude_item_ver_no_mapa"
        app:layout_constraintTop_toBottomOf="@id/servico_saude_item_cep_cidade_estado" />


</androidx.constraintlayout.widget.ConstraintLayout>